<section class="blog_area single-post-area py-80px section-margin--small">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 posts-list">
                <div class="single-post row">
                    <div class="col-lg-3  col-md-3">
                        <div class="blog_info text-right">

                            <ul style="list-style-type: none; font-size: 17px">
                                <li>
                                    <a href="/">Homepage
                                    </a>
                                </li>
                                <li>
                                    <a href="/account/cart/{{user.id}}">My Cart
                                    </a>
                                </li>
                                <li><a href="/upload/add-new-product">Add a new product</a></li>
                                <li><a href="#">Change Password</a></li>
                                <!--chinh lai cai khung bọc mấy cái này-->
                                <li><a href="/account/{{user.id}}">Account Details</a></li>
                                <li><a href="/logout">Logout</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-9 blog_details">
                        <h2>New Product</h2>
                        <div class="comment-form">
                            <form action="/upload" method="POST" enctype="multipart/form-data">
                                <div class="content1">
                                    <div class="form-group">
                                        <label for="inputName">Book Title</label>
                                        <input type="text" id="inputName" name="name" class="form-control"
                                            style="margin-bottom:-5px">
                                    </div>
                                    <div class="form-group">
                                        <label for="inputCategory">Category</label>
                                        <input type="text" id="inputCategory" name="category" class="form-control"
                                            style="margin-bottom:-5px">
                                    </div>
                                    <div class="form-group">
                                        <label for="inputAuthor">Author</label>
                                        <input type="text" id="inputAuthor" name="author" class="form-control"
                                            style="margin-bottom:-5px">
                                    </div>
                                    <div class="form-group">
                                        <label for="inputPrice">Price</label>
                                        <input type="text" id="inputPrice" name="price" class="form-control"
                                            style="margin-bottom:-5px">
                                    </div>
                                    <div class="form-group">
                                        <label for="inputDes">Description</label>
                                        {{!-- <input type="text" id="inputDes" name="description" class="form-control"
                                            style="margin-bottom:-5px;"> --}}
                                        <textarea rows="6" wrap="soft" id="inputDes" name="description"
                                            class="form-control" style="margin-bottom:-5px; width:450px"></textarea>
                                    </div>
                                    <div class="row-md-6">

                                        <div class="card card-primary">
                                            <div class="card-body">
                                                <div class="form-group">
                                                    <!--                                    <input class="form-control" type="file" id="formFile" onchange="preview()" multiple>-->
                                                    <!--                                    <img id="frame" src="" class="img-fluid"/>-->
                                                    <div class="wrapper">
                                                        <header>Tải Hình Ảnh Sản Phẩm</header>
                                                        <span id="product-image-input" class="upload-form">
                                                            <input class="file-input" name="product-images" type="file"
                                                                accept=".jpg,.jpeg,.png" hidden multiple>
                                                            <i class="fas fa-cloud-upload-alt"></i>
                                                            <p class="upload-p">Browse Files to Upload. Supports: JPG,
                                                                JPEG, PNG.</p>
                                                        </span>
                                                        <section class="upload-selection progress-area"></section>
                                                        <section class="upload-selection uploaded-area"></section>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <a href="/products" class="btn btn-secondary">Cancel</a>
                                            <input type="submit" value="Upload" class="btn btn-success float-right">
                                        </div>
                                    </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="/js/uploadImageHandler.js"></script>
<script>
    function preview() {
        frame.src = URL.createObjectURL(event.target.files[0]);
    }

    function clearImage() {
        document.getElementById('formFile').value = null;
        frame.src = "";
    }
</script>

